<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="500, 300" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <BevelledRectangleWidget Style="{Styles/DialogArea}" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      
      <LabelWidget Font="{Fonts/Pericles}" Text="[EditVoltageLevelDialog:1]" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, Infinity" />

      <SliderWidget Name="EditVoltageLevelDialog.VoltageSlider" Granularity="1" MinValue="0" MaxValue="15" HorizontalAlignment="Center" Margin="40, 0" />
      
      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditVoltageLevelDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="[EditBatteryDialog:2]" Margin="20, 0" />
        <BevelledButtonWidget Name="EditVoltageLevelDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="[EditBatteryDialog:3]"/>
      </StackPanelWidget>
      
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
