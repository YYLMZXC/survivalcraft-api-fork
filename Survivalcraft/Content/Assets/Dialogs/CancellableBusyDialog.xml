<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="640, 260" HorizontalAlignment="Center" VerticalAlignment="Center">
    <BevelledRectangleWidget Style="{Styles/DialogArea}" />
    <UniformSpacingPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="8, 8" ClampToBounds="true">
			<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <LabelWidget Name="CancellableBusyDialog.LargeLabel" Color="255, 255, 255" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 5"/>
        <LabelWidget Name="CancellableBusyDialog.SmallLabel" Color="128, 128, 128" HorizontalAlignment="Center" VerticalAlignment="Near" TextAnchor="HorizontalCenter" WordWrap="true" Margin="0, 5"/>
			</StackPanelWidget>
			<BusyBarWidget HorizontalAlignment="Center" VerticalAlignment="Center" LitBarColor="255, 255, 255" UnlitBarColor="64, 64, 64, 64"/>
			<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
				<BevelledButtonWidget Name="CancellableBusyDialog.CancelButton" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="[CancellableBusyDialog:1]"/>
				<BevelledButtonWidget Name="CancellableBusyDialog.HideButton" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="" Margin="20, 0"/>
			</StackPanelWidget>
		</UniformSpacingPanelWidget>
	</CanvasWidget>

</CanvasWidget>
