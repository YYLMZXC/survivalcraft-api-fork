      <CanvasWidget Size="0, 5" />
      <LabelWidget Text="[ExternalContentLinkDialog:1]"  Color="255, 255, 255" HorizontalAlignment="Center"/>
      <CanvasWidget Size="0, Infinity" />
      <CanvasWidget Margin="10, 0">
        <BevelledRectangleWidget Style="{Styles/TextBoxArea}" Size="Infinity, 40" />
        <TextBoxWidget Size="Infinity, 40" Name="ExternalContentLinkDialog.TextBox"  Color="128, 128, 128" Margin="4, 0" MaximumLength="1024" VerticalAlignment="Center"/>
      </CanvasWidget>
      <CanvasWidget Size="0, Infinity" />
      <BevelledButtonWidget Name="ExternalContentLinkDialog.OkButton" Text="[ExternalContentLinkDialog:2]" Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center"/>
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
