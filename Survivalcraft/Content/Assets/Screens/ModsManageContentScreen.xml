<Screen xmlns="runtime-namespace:Game">

	<PanoramaWidget />

	<StackPanelWidget Direction="Horizontal">

		<CanvasWidget Style="{Widgets/TopBarContents}" >
			<LabelWidget Name="TopBar.Label" Text="" />
		</CanvasWidget>

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

			<LabelWidget Name="ModsContentLabel" Text=""  Color="128, 128, 128" HorizontalAlignment="Center" Margin="0, 10" />

			<CanvasWidget Margin="15, 0">
				<RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
				<ListPanelWidget Name="ModsContentList" Direction="Vertical" Margin="3, 3" ItemSize="64" SelectionColor="10, 70, 0, 90"/>
			</CanvasWidget>

			<StackPanelWidget Direction="Horizontal" Margin="0, 10">
				<BevelledButtonWidget Name="UpDirectory" Style="{Styles/ButtonStyle_UpDirectory}"/>
				<CanvasWidget Size="10, 0"/>
				<BevelledButtonWidget Name="ActionButton" Style="{Styles/ButtonStyle_160x60}" Text="" Margin="10, 0"/>
				<BevelledButtonWidget Name="ActionButton2" Style="{Styles/ButtonStyle_160x60}" Text="" Margin="10, 0"/>
				<BevelledButtonWidget Name="ActionButton3" Style="{Styles/ButtonStyle_160x60}" Text="" Margin="10, 0"/>
				<CanvasWidget Size="Infinity, 0" />
				<StackPanelWidget Margin="10, 0">
					<BevelledButtonWidget Name="UninstallFilter" Text="Uninstall" Size="120, 60" VerticalAlignment="Center" Margin="-10, 0"/>
					<BevelledButtonWidget Name="InstallFilter" Text="Installed" Size="120, 60" VerticalAlignment="Center"/>
				</StackPanelWidget>
			</StackPanelWidget>

		</StackPanelWidget>

	</StackPanelWidget>

</Screen>