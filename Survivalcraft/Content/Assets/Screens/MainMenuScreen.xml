<Screen xmlns="runtime-namespace:Game">

	<PanoramaWidget />

	<StackPanelWidget Direction="Vertical">

		<CanvasWidget Size="0, Infinity" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">
			<RectangleWidget Name="Logo" Size="800, 100" OutlineColor="0, 0, 0, 0" HorizontalAlignment="Center" FillColor="255, 255, 255" Margin="0, 0" Subtexture="{Textures/Gui/Logo}" />
			<CanvasWidget Size="0, 5" />
			<LabelWidget Name="Version" FontScale="0.5" Text="[MainMenuScreen:1]" HorizontalAlignment="Center" Color="64, 192, 64" DropShadow="true" />
		</StackPanelWidget>

		<CanvasWidget Size="0, Infinity" />

		<MotdWidget Size="Infinity, 60"/>

		<CanvasWidget Size="0, Infinity" />

		<StackPanelWidget HorizontalAlignment="Center" Direction="Vertical" Margin="0, 0">
			<StackPanelWidget HorizontalAlignment="Center" >
				<BevelledButtonWidget Name="Play" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="[MainMenuScreen:2]" />
				<BevelledButtonWidget Name="Content" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="[MainMenuScreen:3]" />
			</StackPanelWidget>
			<StackPanelWidget HorizontalAlignment="Center">
				<BevelledButtonWidget Name="Settings" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="[MainMenuScreen:4]" />
				<BevelledButtonWidget Name="Manage" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="[MainMenuScreen:5]" />
			</StackPanelWidget>
			<BevelledButtonWidget Name="Buy" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="[MainMenuScreen:6]" IsVisible="false" />
		</StackPanelWidget>

		<CanvasWidget Size="0, Infinity" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="0, 4">
			<StackPanelWidget HorizontalAlignment="Center">
				<StackPanelWidget Name="BulletinStackPanel" Direction="Horizontal" VerticalAlignment="Center">
					<BevelledButtonWidget Name="BulletinButton" CenterColor="0, 0, 0, 0" BevelColor="0, 0, 0, 0" Size="100, 30" VerticalAlignment="Center" HorizontalAlignment="Center">
						<LabelWidget Text="点此查看公告" Font="{Fonts/Pericles}" FontScale="0.7" HorizontalAlignment="Near" VerticalAlignment="Center" Color="64, 192, 64" DropShadow="true" IsVisible="true"/>
					</BevelledButtonWidget>
				</StackPanelWidget>
				<LabelWidget Name="CopyrightLabel" Text="[MainMenuScreen:7]" Color="255, 255, 255, 255"  VerticalAlignment="Center" FontScale="0.7" DropShadow="true"/>
				<LabelWidget Text="[MainMenuScreen:8]" Color="255, 255, 255, 255"  VerticalAlignment="Center" FontScale="0.7" DropShadow="true" _ExcludePlatforms="Ios" />
				<LinkWidget Name="Link" Text="[MainMenuScreen:9]" Color="64, 192, 64" FontScale="0.7" VerticalAlignment="Center" Url="http://kaalus.wordpress.com" DropShadow="true" _ExcludePlatforms="Ios" />
				<LabelWidget Text="[MainMenuScreen:10]" Color="255, 255, 255, 255"  VerticalAlignment="Center" FontScale="0.7" DropShadow="true" _ExcludePlatforms="Ios" />
			</StackPanelWidget>

		</StackPanelWidget>

	</StackPanelWidget>

	<BitmapButtonWidget Name="LanguageSwitchButton" Size="36, 36" NormalSubtexture="{Textures/Gui/Earth}" ClickedSubtexture="{Textures/Gui/Earth}" Margin="24, 24" IsAutoCheckingEnabled="false" VerticalAlignment="Far" HorizontalAlignment="Near"/>
	<BitmapButtonWidget Name="Help" Size="36, 36" NormalSubtexture="{Textures/Atlas/HelpButton}" ClickedSubtexture="{Textures/Atlas/HelpButton}" Margin="24, 24" IsAutoCheckingEnabled="false" VerticalAlignment="Far" HorizontalAlignment="Far"/>
</Screen>