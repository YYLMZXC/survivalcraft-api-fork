<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Game</RootNamespace>
    <ApplicationVersion>2.3.0.0</ApplicationVersion>
	<Nullable>enable</Nullable>
    
    <!--编译设置-->
    <DebugType>none</DebugType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DebugSymbols>false</DebugSymbols>
    <AssemblyName>Game</AssemblyName>
    
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DefineConstants>DEBUG</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <Optimize>False</Optimize>
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup>
    <PreBuildEvent>set p=$(SolutionDir)
      cd "$(SolutionDir)Survivalcraft\Content"
      "$(SolutionDir)7za.exe" a -tzip -mx=9 ..\Content.zip</PreBuildEvent>
    <SupportedOSPlatformVersion>10.0.22621.0</SupportedOSPlatformVersion>
    <AssemblyVersion>2.3.0.0</AssemblyVersion>
    <FileVersion>2.3.0.0</FileVersion>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Engine\Engine.csproj" />
    <ProjectReference Include="..\EntitySystem\EntitySystem.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Content.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Content Include="运行库\oalinst.exe" />
    <None Update="init.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Content Include="Content\icon.ico" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Esprima" Version="3.0.4" />
    <PackageReference Include="Jint" Version="3.0.0-beta-2057" />
    <Reference Include="OpenTK" HintPath="..\Engine\OpenTK.dll"/>
  </ItemGroup>
</Project>